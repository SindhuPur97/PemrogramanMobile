<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/about"
    android:background="@drawable/bg"
    tools:context=".ProfileFragment">

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="300px"
        android:layout_gravity="center"
        android:src="@drawable/sindhu"/>

    <TextView
        android:layout_marginTop="220px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textColor="@color/colorPrimaryDark"
        android:textStyle="bold"
        android:gravity="center"
        android:text="Sindhu Purnama Santoso"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="15sp"
        android:text="sindhupurnama52@gmail.com"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="40dp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:text="@string/media"/>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="40dp"
        android:drawableLeft="@drawable/ic_ig"
        android:drawablePadding="10dp"
        android:textColor="#000000"
        android:text=" : sindhupurnama"/>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="5dp"
        android:drawableLeft="@drawable/ic_git"
        android:drawablePadding="11dp"
        android:textColor="#000000"
        android:text=" :  sindhupur97"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="5dp"
        android:drawableLeft="@drawable/ic_fb"
        android:drawablePadding="11dp"
        android:textColor="#000000"
        android:text=" :  sindhu purnama"/>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="15dp"
        android:drawablePadding="11dp"
        android:textColor="#000000"
        android:textStyle="italic"
        android:gravity="center"
        android:textSize="20dp"
        android:text="@string/just"/>

</LinearLayout>